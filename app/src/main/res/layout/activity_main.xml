<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F1CCCC"
    android:padding="24dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guia da Cidade Sorocaba"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:textColor="#0E0E0E"
        android:textSize="30dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:ellipsize="none"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_guia_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guia Pet"
        android:layout_marginTop="140dp"
        android:textColor="#0E0E0E"
        android:textSize="25dp"
        android:layout_above="@+id/escolhas_layout"
        android:textStyle="bold"
        android:singleLine="false"
        android:ellipsize="none"
        android:maxLines="1"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/escolhas_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/abre_tela_fas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Fundação Alexandra Schlumberger"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/abre_tela_agroverde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Agroverde"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/abre_tela_bemlocao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Pet Shop Bem Locão"
            android:textColor="@color/black"
            android:textSize="24sp"/>

    </LinearLayout>

</RelativeLayout>
