<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:background="#F1CCCC"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fundação Alexandra Schlumberger"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="#0E0E0E"
        android:textSize="25dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:ellipsize="none"
        android:maxLines="3"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txt_guia_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_titulo"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="false"
        android:text="Guia Pet"
        android:layout_centerInParent="true"
        android:textColor="#0E0E0E"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/escolhas_layout"
        android:layout_below="@id/txt_guia_pet"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/saiba_maisfas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:layout_marginBottom="12dp"
            android:text="Saiba mais"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/fas_img"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_margin="20dp"
            android:contentDescription="Imagem_fas"
            android:layout_centerInParent="true"
            android:src="@drawable/alexandra_schlumberger" />

    </LinearLayout>

    <Button
        android:id="@+id/voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/escolhas_layout"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FBFBFB"
        android:text="Voltar"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="24sp" />

</RelativeLayout>
